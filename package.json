{
  "name": "random-useragent",
  "description": "Get a random and legit user-agent for your HTTP clients",
  "version": "1.0.0",
  "main": "lib/index.js",
  "bin": {
    "random-useragent": "bin/random-useragent.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hfreire/random-useragent.git"
  },
  "author": "Hugo Freire <hugo@exec.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hfreire/random-useragent/issues"
  },
  "homepage": "https://github.com/hfreire/random-useragent#readme",
  "dependencies": {
    "bluebird": "^3.4.7"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-mocha": "^4.3.0",
    "eslint-plugin-node": "^3.0.5",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "mocha-lcov-reporter": "^1.2.0",
    "standard": "^8.0.0",
    "testdouble": "^1.9.0"
  },
  "scripts": {
    "lint": "node_modules/.bin/eslint .",
    "coverage": "node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --recursive test",
    "test": "npm run lint && npm run coverage",
    "clean": "rm -rf bin lib coverage",
    "compile": "mkdir -p bin lib && ./node_modules/.bin/babel -o lib/index.js src/random-useragent.js && ./node_modules/.bin/babel -o bin/random-useragent.js src/app.js",
    "prepublish": "npm run compile",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  }
}
